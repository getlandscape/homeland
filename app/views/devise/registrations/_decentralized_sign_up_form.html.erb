<%
  address_name = "#{params[:wallet_type]}_address"
  resource.send "#{address_name}=", params[:address]
  resource.email = "#{params[:address]}@#{params[:wallet_type]}.com"
  resource.wallet_type = params[:wallet_type]
%>
<%= f.hidden_field :email %>
<%= f.hidden_field :wallet_type %>
<%= hidden_field_tag :address, params[:address] %>
<%= render "shared/error_messages", target: @user %>
<%= form_group(f, :login) do %>
  <%= f.text_field :login, class: "form-control form-control-lg", placeholder: t("users.login"), hint: t("users.suggest_using_twitter_id") %>
<% end %>
<%= form_group(f, :name) do %>
  <%= f.text_field :name, class: "form-control form-control-lg", placeholder: t("activerecord.attributes.user.name") %>
<% end %>
<%= form_group(f, "#{address_name}") do %>
  <%= f.text_field "#{address_name}", class: "form-control form-control-lg"  %>
<% end %>
