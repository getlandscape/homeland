.edit-group-user-body
  - if @current_group_user && (@current_group_user.admin? || @current_group_user.owner?)
    - if params[:opt] == 'approve'
      .body
        .content
          = t('groups.confirm_approve')
      .footer
        .content
          = link_to(t('groups.confirm'), group_group_user_path(id: group_user.id, group_id: group_user.group_id, opt: 'approve'), method: :put, class: 'btn btn-primary btn-join', remote: true)
          button.btn.btn-primary.btn-join.modal-close-button[type='button' data-bs-dismiss='modal' aria-label='Close']
            = t('groups.cancel')
    - elsif params[:opt] == 'upgrade'
      .body
        .content
          = t('groups.confirm_upgrade')
      .footer
        .content
          = link_to(t('groups.confirm'), group_group_user_path(id: group_user.id, group_id: group_user.group_id, opt: 'upgrade'), method: :put, class: 'btn btn-primary btn-join', remote: true)
