<%= form_for @group, remote: true, class: "form", html: { tb: 'edit-group' } do |f| %>
  <%= render "shared/error_messages", target: @group %>
  <div class="form-group">
    <div class="input-group">
      <div class="input-group-prepend mr-1">
        <%= f.select :group_type, [:public_group, :private_group], {}, class: "bootstrap-select", data: { "live-search": true } %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="input-group">
      <div class="input-group-prepend mr-1">
      </div>
      <%= f.text_field :name, class: "form-control", placeholder: t("groups.form.title_placeholder") %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-7">
      <%= f.file_field :avatar, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.text_area :description, class: "group-editor form-control", placeholder: t("groups.form.title_placeholder"), rows: 1 %>
  </div>
  <div class="form-actions jcsb hide-ios">
    <%= f.submit t("common.create"), class: "btn btn-primary", 'data-disable-with' => t("common.saving"), 'data-tb' => "save-group" %>
    <div class="hide-ios"><a href="/markdown" target="_blank"><i class="fa fa-life-ring"></i> <%= t("groups.form.markdown_guides") %></a></div>
  </div>
<% end %>
