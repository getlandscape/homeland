<% cache(["index_locations",Time.now.strftime("%Y-%m-%D")]) do %>
<div class="panel panel-default">
  <div class="panel-heading"><%=t("common.hot_locations")%></div>
  <div class="panel-body" style="text-align:center;">
  <% Location.hot.limit(12).each do |item| %>
    <span class="name"><%= location_name_tag(item) %></span>
  <% end %>
  </div>
</div>
<% end %>