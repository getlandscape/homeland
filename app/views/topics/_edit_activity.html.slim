.edit-group-user-body
  - if params[:opt] == 'approve'
    .body
      .content
        = t('topics.activity.confirm_approve')
    .footer
      .content
        = link_to(t('topics.activity.confirm'), manage_activity_topic_path(id: topic.id, user_topic_id: user_topic.id, opt: 'approve'), method: :post, class: 'btn btn-primary btn-join', remote: true)
        button.btn.btn-primary.btn-join.modal-close-button[type='button' data-bs-dismiss='modal' aria-label='Close']
          = t('topics.activity.cancel')
  - elsif params[:opt] == 'reject'
    .body
      .content
        = t('topics.activity.confirm_reject')
    .footer
      .content
        = link_to(t('topics.activity.reject'), manage_activity_topic_path(id: topic.id, user_topic_id: user_topic.id, opt: 'decline'), method: :post, class: 'btn btn-primary btn-join', remote: true)
        button.btn.btn-primary.btn-join.modal-close-button[type='button' data-bs-dismiss='modal' aria-label='Close']
          = t('topics.activity.cancel')